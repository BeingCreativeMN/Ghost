{
  "name": "@tryghost/e-2-e",
  "version": "0.0.0",
  "repository": "https://github.com/TryGhost/Ghost/tree/main/packages/e2e",
  "author": "Ghost Foundation",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput --sourceMap",
    "build": "yarn build:ts",
    "build:ts": "tsc",
    "prepare": "tsc",
    "test:unit": "NODE_ENV=testing c8 --src src --all --check-coverage --100 --reporter text --reporter cobertura mocha -r ts-node/register './test/**/*.test.ts'",
    "test:e2e": "playwright test",
    "test": "yarn test:types && yarn test:unit && yarn test:e2e",
    "test:types": "tsc --noEmit",
    "lint:code": "eslint src/ --ext .ts --cache",
    "lint": "yarn lint:code && yarn lint:test",
    "lint:test": "eslint -c test/.eslintrc.js test/ --ext .ts --cache"
  },
  "files": [
    "build"
  ],
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "c8": "10.1.3",
    "dotenv": "^16.5.0",
    "mailslurp-client": "^15.22.1",
    "mocha": "11.4.0",
    "sinon": "20.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@tryghost/debug": "^0.1.34",
    "@tryghost/errors": "^1.3.7",
    "@tryghost/logging": "^2.4.21",
    "mailhog": "^4.16.0"
  }
}
